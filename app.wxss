page {
  background: #f5f5f5;
  color: #111827;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

button::after {
  border: 0;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6rpx 14rpx rgba(15, 23, 42, 0.05);
}

.row {
  display: flex;
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

.muted {
  color: #6b7280;
}

.btn {
  border-radius: 8rpx;
  padding: 14rpx 18rpx;
  line-height: 1;
  font-size: 28rpx;
}

.btn-primary {
  background: #111827;
  color: #ffffff;
  border: 1px solid #111827;
}

.btn-ghost {
  background: #ffffff;
  color: #111827;
  border: 1px solid #111827;
}

.pill {
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  line-height: 1;
}

.pill-gray {
  background: #f3f4f6;
  color: #374151;
}

.pill-green {
  background: #ffffff;
  color: #111827;
  border: 1px solid #d1d5db;
}

.pill-yellow {
  background: #f3f4f6;
  color: #111827;
  border: 1px solid #d1d5db;
}

.pill-red {
  background: #111827;
  color: #ffffff;
  border: 1px solid #111827;
}

.input {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 16rpx 16rpx;
  border: 1px solid #d1d5db;
  font-size: 28rpx;
}

.textarea {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 16rpx 16rpx;
  border: 1px solid #d1d5db;
  font-size: 28rpx;
  min-height: 180rpx;
}
